<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPaneChartMenu" prefHeight="400.0" prefWidth="400.0" stylesheets="style.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChartMenuController">
   <children>
      <Button fx:id="btnMeanError" layoutX="54.0" layoutY="155.0" mnemonicParsing="false" onAction="#handleMean" prefHeight="23.0" prefWidth="291.0" stylesheets="@style.css" text="Relative mean error" />
      <Button fx:id="btnStddevError" layoutX="54.0" layoutY="211.0" mnemonicParsing="false" onAction="#handleStandardDeviation" prefHeight="23.0" prefWidth="291.0" stylesheets="@style.css" text="Relative standard deviation error" />
      <Button fx:id="btnTimeConsumed" layoutX="54.0" layoutY="266.0" mnemonicParsing="false" onAction="#handleTimeConsumed" prefHeight="23.0" prefWidth="291.0" stylesheets="@style.css" text="Time consumed" />
      <Label fx:id="labelChooseChart" layoutX="103.0" layoutY="25.0" prefHeight="50.0" prefWidth="207.0" text="Choose a chart:" textAlignment="CENTER" textFill="WHITE" textOverrun="WORD_ELLIPSIS">
         <font>
            <Font name="Georgia" size="21.0" />
         </font>
      </Label> 
      <Button fx:id="btnAll" layoutX="54.0" layoutY="323.0" mnemonicParsing="false" onAction="#handleAll" prefHeight="23.0" prefWidth="291.0" stylesheets="@style.css" text="Mean/Standard deviation" />
      <CheckBox fx:id="cBoxVersus" layoutX="37.0" layoutY="85.0" mnemonicParsing="false" onAction="#handleCbox" prefHeight="50.0" prefWidth="338.0" text="Standard vs. Load shedded results" />
   </children>
</AnchorPane>
